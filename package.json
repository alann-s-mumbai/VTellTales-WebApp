{
  "name": "vtelltales-webapp",
  "version": "1.0.0",
  "description": "VTellTales Web Application - A comprehensive storytelling platform",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alann-s-mumbai/VTellTales-WebApp.git"
  },
  "author": "VTellTales Team",
  "license": "MIT",
  "scripts": {
    "dev": "./scripts/start-dev.sh",
    "dev:backend": "./scripts/start-backend.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "stop": "./scripts/stop-dev.sh",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend/VTellTalesCore/VTellTales_WA.API/VTellTales_WA.API && dotnet publish -c Release -o ../../../../deployment/backend",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend/VTellTalesCore && dotnet test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "deploy:prod": "./scripts/deploy-production.sh",
    "version": "echo $npm_package_version",
    "setup": "./scripts/setup-project.sh"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "storytelling",
    "web-application",
    "react",
    "dotnet",
    "typescript",
    "vtelltales"
  ]
}